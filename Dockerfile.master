# LlamaAgent Master Program Docker Image
# Production-ready container for the complete AI agent system

FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    curl \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy pyproject.toml and necessary files for better caching
COPY pyproject.toml ./
COPY README.md ./
COPY LICENSE ./
COPY src/llamaagent/_version.py ./src/llamaagent/_version.py

# Install dependencies
RUN pip install --no-cache-dir -e ".[all]"

# Copy application code
COPY src/ ./src/
COPY llamaagent_master_program.py ./

# Package already installed above

# Create necessary directories
RUN mkdir -p /var/log/llamaagent /app/data /app/cache

# Set environment variables
ENV PYTHONPATH=/app/src:$PYTHONPATH
ENV LLAMAAGENT_ENV=production
ENV LLAMAAGENT_LOG_LEVEL=INFO

# Expose ports
EXPOSE 8000 9090

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the master program
CMD ["python", "llamaagent_master_program.py", "server", "--host", "0.0.0.0", "--port", "8000"]